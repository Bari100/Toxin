        function myFunction() {
            let x = document.querySelector(".header__nav-bar");
            if (x.className === "header__nav-bar") {
                x.className += " header__responsive";
            } else {
                x.className = "header__nav-bar";
            }
        }
        let btn = document.querySelector(".btn-menu")
        btn.addEventListener("click", myFunction)