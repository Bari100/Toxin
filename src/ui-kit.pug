doctype html
html(lang="en")
    head
        title ui-kit
        link(rel='stylesheet' href='styles/style.scss')
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
        link(href="../node_modules/air-datepicker/dist/css/datepicker.css" rel="stylesheet" type="text/css")
        script(src="ui-kit_air-datepicker.js")
    body
        .ui-kit
            .ui-kit_main-search
                include blocks/_commons/main-search/main-search.pug
            .ui-kit_reservation
                include blocks/_commons/reservation/reservation.pug
            .ui-kit_datepicker
                .ui-kit_datepicker-here
            .ui-kit_sign-up
                include blocks/_commons/sign-up/sign-up.pug
            .ui-kit_sign-in
                include blocks/_commons/sign-in/sign-in.pug
            .ui-kit_number-rate
                include blocks/_commons/number-rate/number-rate.pug
                +number-rate__name-price-rating-reviews('888', '9 990₽', '145', ' люкс', 'img/.number-rate__img-1.png', 'img/stars-5.svg')
            .ui-kit_number-rate-2
                include blocks/_commons/number-rate/number-rate.pug
                +number-rate__name-price-rating-reviews('840', '9 900₽', '65', '', 'img/.number-rate__img-2.png', 'img/stars-4.svg')