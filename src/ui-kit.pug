doctype html
html(lang="en")
    head
        title ui-kit
        link(rel='stylesheet' href='styles/style.scss')
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
        link(href="../node_modules/air-datepicker/dist/css/datepicker.css" rel="stylesheet" type="text/css")
        script(src="ui-kit_air-datepicker.js")
    body
        .ui-kit
            .ui-kit_main-search
                include blocks/_commons/main-search/main-search.pug
            .ui-kit_reservation
                include blocks/_commons/reservation/reservation.pug
            .ui-kit_datepicker
                .ui-kit_datepicker-here
            .ui-kit_sign-up
                include blocks/_commons/sign-up/sign-up.pug
            .ui-kit_sign-in
                include blocks/_commons/sign-in/sign-in.pug
            .ui-kit_number-rate
                include blocks/_commons/number-rate/number-rate.pug
                +number-rate__name-price-rating-reviews('888', '9 990₽', '145', ' люкс', 'img/.number-rate__img-1.png', 'img/stars-5.svg')
            .ui-kit_number-rate-2
                include blocks/_commons/number-rate/number-rate.pug
                +number-rate__name-price-rating-reviews('840', '9 900₽', '65', '', 'img/.number-rate__img-2.png', 'img/stars-4.svg')
        .ui-kit-2
            .ui-kit-2-column-1
                p.ui-kit-2-title TEXT FIELD&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;DEFAULT
                input.ui-kit-2-input(type="email" placeholder="Email" name="email" required)
                p.ui-kit-2-title TEXT FIELD&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;HOVER / FOCUS
                input.ui-kit-2-input(type="email" placeholder="This is pretty awesome" name="email" required)
                p.ui-kit-2-title DROPDOWN&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;DEFAULT
                include blocks/_commons/guests/guests.pug
                p.ui-kit-2-title MASKED TEXT FIELD&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;DEFAULT
                input.ui-kit-2-input(type="date" name="date" required)
                .main-search__dates
                    .main-search__dates-titles
                        h3.main-search__dates-title прибытие
                        h3.main-search__dates-title выезд
                    input.main-search__input(type="text" data-range="true" placeholder="ДД.ММ.ГГГГ                       ДД.ММ.ГГГГ" data-multiple-dates-separator="                          " class="datepicker-here" readonly)
                    script(src="../node_modules/air-datepicker/dist/js/datepicker.js")
                    .main-search__input-fake-split-left
                    .main-search__input-fake-split
                    .main-search__input-fake-split-right
                p.ui-kit-2-title FILTER DATE DROPDOWN
                input.ui-kit-2-input(placeholder="19 авг - 23 авг" type="text" data-range="true" data-multiple-dates-separator=" - " class="datepicker-here" readonly)
                p.ui-kit-2-title SUBSCRIPTION TEXT FIELD
                .column-5__footer
                    .column-5__footer-width
                        input(type='email' name='email' placeholder='Email')
                        button(type='submit')
                            img(src='img/arrow_forward.svg')
                p.ui-kit-2-title DROPDOWN&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;DEFAULT
                include blocks/search-room/search-room__filter/search-room__filter-convenience/search-room__filter-convenience.pug
                .ui-kit-2-convenience
                    p.ui-kit-2-title DROPDOWN&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;EXPANDED
                    include blocks/search-room/search-room__filter/search-room__filter-convenience/search-room__filter-convenience.pug
                .search-room__filter-convenience-additional
                    .dropdown
                        .search-room__filter-convenience-additional__container
                            ul
                                li.search-room__filter-convenience-additional__dropdown
                                    a#search-room__filter-convenience-additional__text(href="#" data-toggle="dropdown") <h3 class="search-room__filter-titles search-room__filter-titles-convenience-additional">expandable checkbox list</h3>
                                        img.search-room__filter-convenience-additional__arrow-down(src="img/arrow_down.svg")
                                    ul.search-room__filter-convenience-additional__dropdown-menu
                                        .search-room__filter-convenience-additional__dropdown-content
                                            li.search-room__filter-convenience-additional__number
                                                label
                                                    input(type="checkbox" name="breakfast")
                                                    span.search-room__filter-fake-checkbox
                                                    span.search-room__filter-span-convenience-additional Завтрак
                                            li.search-room__filter-convenience-additional__number  
                                                label
                                                    input(type="checkbox" name="desk")
                                                    span.search-room__filter-fake-checkbox
                                                    span.search-room__filter-span-convenience-additional Письменный стол
                                            li.search-room__filter-convenience-additional__number
                                                label
                                                    input(type="checkbox" name="table")
                                                    span.search-room__filter-fake-checkbox
                                                    span.search-room__filter-span-convenience-additional Стул для кормления
                                            li.search-room__filter-convenience-additional__number
                                                label
                                                    input(type="checkbox" name="bed")
                                                    span.search-room__filter-fake-checkbox
                                                    span.search-room__filter-span-convenience-additional Кроватка
                                            li.search-room__filter-convenience-additional__number
                                                label
                                                    input(type="checkbox" name="tv")
                                                    span.search-room__filter-fake-checkbox
                                                    span.search-room__filter-span-convenience-additional Телевизор
                                            li.search-room__filter-convenience-additional__number
                                                label
                                                    input(type="checkbox" name="shampoo")
                                                    span.search-room__filter-fake-checkbox
                                                    span.search-room__filter-span-convenience-additional Шампунь
                .ui-kit-2-convenience-additional
                    .search-room__filter-convenience-additional
                        .dropdown
                            .search-room__filter-convenience-additional__container
                                ul
                                    li.search-room__filter-convenience-additional__dropdown
                                        a#search-room__filter-convenience-additional__text(href="#" data-toggle="dropdown") <h3 class="search-room__filter-titles search-room__filter-titles-convenience-additional">expandable checkbox list</h3>
                                            img.search-room__filter-convenience-additional__arrow-down(src="img/arrow_down.svg")
                                        ul.search-room__filter-convenience-additional__dropdown-menu
                                            .search-room__filter-convenience-additional__dropdown-content
                                                li.search-room__filter-convenience-additional__number
                                                    label
                                                        input(type="checkbox" name="breakfast")
                                                        span.search-room__filter-fake-checkbox
                                                        span.search-room__filter-span-convenience-additional Завтрак
                                                li.search-room__filter-convenience-additional__number  
                                                    label
                                                        input(type="checkbox" name="desk" checked)
                                                        span.search-room__filter-fake-checkbox
                                                        span.search-room__filter-span-convenience-additional Письменный стол
                                                li.search-room__filter-convenience-additional__number
                                                    label
                                                        input(type="checkbox" name="table" checked)
                                                        span.search-room__filter-fake-checkbox
                                                        span.search-room__filter-span-convenience-additional Стул для кормления
                                                li.search-room__filter-convenience-additional__number
                                                    label
                                                        input(type="checkbox" name="bed" checked)
                                                        span.search-room__filter-fake-checkbox
                                                        span.search-room__filter-span-convenience-additional Кроватка
                                                li.search-room__filter-convenience-additional__number
                                                    label
                                                        input(type="checkbox" name="tv")
                                                        span.search-room__filter-fake-checkbox
                                                        span.search-room__filter-span-convenience-additional Телевизор
                                                li.search-room__filter-convenience-additional__number
                                                    label
                                                        input(type="checkbox" name="shampoo")
                                                        span.search-room__filter-fake-checkbox
                                                        span.search-room__filter-span-convenience-additional Шампунь
                    script(src="blocks/search-room/search-room__filter/search-room__filter-convenience-additional//search-room__filter-convenience-additional.js")
                .info-impressions
                    .reviews-room__info.reviews-room__space
                        img.reviews-room__info-emoticon(src='img/reviews-room__info/emoticon.png' alt='emoticon')
                        p.reviews-room__info-text-b Комфорт
                        p.reviews-room__info-text Шумопоглощающие стены
                        hr.reviews-room__info-line
                        img.reviews-room__info-city(src='img/reviews-room__info/city.png' alt='city')
                        p.reviews-room__info-text-b Удобство
                        p.reviews-room__info-text Окно в каждой из спален
                        hr.reviews-room__info-line
            .ui-kit-2-column-2
                .search-room__filter-checkbox
                    h3.search-room__filter-titles.search-room__filter-titles-checkbox Checkbox Buttons
                    label
                        input(type="checkbox" name="smoke")
                        span.search-room__filter-fake-checkbox
                        span.search-room__filter-span-checkbox Можно курить
                    label
                        input(type="checkbox" name="pets" checked)
                        span.search-room__filter-fake-checkbox
                        span.search-room__filter-span-checkbox Можно с питомцами
                    label
                        input(type="checkbox" name="guests" checked)
                        span.search-room__filter-fake-checkbox
                        span.search-room__filter-span-checkbox Можно пригласить гостей <br>(до 10 человек)
                .sign-up-form
                    p.ui-kit-2-title RADIO BUTTONS
                    .sign-up-form__sex
                        .sign-up-form__male
                            label
                                input(type="radio" name="sex" value="male" checked)
                                span.sign-up-form__fake-radio
                                span.sign-up-form__span-male-female Мужчина
                        .sign-up-form__female
                            label
                                input(type="radio" name="sex" value="female")
                                span.sign-up-form__fake-radio
                                span.sign-up-form__span-male-female Женщина
                    p.ui-kit-2-title TOGGLE
                    .sign-up-form__checkbox
                        label
                            input(type="checkbox" checked)
                            span.sign-up-form__fake-checkbox
                            span.sign-up-form__span-checkbox Получать спецпредложения
                    .sign-up-form__checkbox
                        label
                            input(type="checkbox")
                            span.sign-up-form__fake-checkbox
                            span.sign-up-form__span-checkbox Получать спецпредложения
                p.ui-kit-2-title LIKE BUTTON
                .reviews-room__reviews
                    .reviews-room__comment-images-2
                        button(type="button").reviews-room__comment-like
                            .reviews-room__comment-img
                            span.reviews-room__like-number 2
                    .reviews-room__comment-images-1
                        button(type="button").reviews-room__comment-like.reviews-room__active-like
                            .reviews-room__comment-img.reviews-room__comment-img-like
                            span.reviews-room__like-number.reviews-room__active-like 12
                    script. 
                        $(".reviews-room__comment-images-1 > .reviews-room__comment-like").click(function() {
                            if  ($(".reviews-room__comment-images-1 > .reviews-room__comment-like").hasClass('reviews-room__active-like') && $(".reviews-room__comment-images-1 > .reviews-room__comment-like > .reviews-room__like-number").hasClass('reviews-room__active-like')) {
                                $(".reviews-room__comment-images-1 > .reviews-room__comment-like").removeClass('reviews-room__active-like');
                                $(".reviews-room__comment-images-1 > .reviews-room__comment-like > .reviews-room__like-number").removeClass('reviews-room__active-like');
                                $( ".reviews-room__comment-images-1 > .reviews-room__comment-like > .reviews-room__comment-img" ).removeClass('reviews-room__comment-img-like');
                            } else {
                                $(".reviews-room__comment-images-1 > .reviews-room__comment-like").addClass('reviews-room__active-like');
                                $(".reviews-room__comment-images-1 > .reviews-room__comment-like > .reviews-room__like-number").addClass('reviews-room__active-like');
                                $( ".reviews-room__comment-images-1 > .reviews-room__comment-like > .reviews-room__comment-img" ).addClass('reviews-room__comment-img-like');
                            }
                        });
                        $(".reviews-room__comment-images-2 > .reviews-room__comment-like").click(function() {
                            if  ($(".reviews-room__comment-images-2 > .reviews-room__comment-like").hasClass('reviews-room__active-like') && $(".reviews-room__comment-images-2 > .reviews-room__comment-like > .reviews-room__like-number").hasClass('reviews-room__active-like')) {
                                $(".reviews-room__comment-images-2 > .reviews-room__comment-like").removeClass('reviews-room__active-like');
                                $(".reviews-room__comment-images-2 > .reviews-room__comment-like > .reviews-room__like-number").removeClass('reviews-room__active-like');
                                $( ".reviews-room__comment-images-2 > .reviews-room__comment-like > .reviews-room__comment-img" ).removeClass('reviews-room__comment-img-like');
                            } else {
                                $(".reviews-room__comment-images-2 > .reviews-room__comment-like").addClass('reviews-room__active-like');
                                $(".reviews-room__comment-images-2 > .reviews-room__comment-like > .reviews-room__like-number").addClass('reviews-room__active-like');
                                $( ".reviews-room__comment-images-2 > .reviews-room__comment-like > .reviews-room__comment-img" ).addClass('reviews-room__comment-img-like');
                            }
                        });
                p.ui-kit-2-title RATE BUTTON
            .ui-kit-2-column-3