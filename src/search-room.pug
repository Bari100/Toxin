        include blocks/_commons/header/header.pug
        .search-room.wrap
            .search-room__filter
                .search-room__filter-dates
                    h3.search-room__filter-titles даты пребывания в отеле
                    //- input(type="text" data-range="true" data-multiple-dates-separator=" - " class="datepicker-here")
                .guests
                    h3.search-room__filter-titles гости
                        include blocks/_commons/guests/guests.pug
                .search-room__filter-price
                    h3.search-room__filter-titles диапазон цены
                    include blocks/search-room/search-room__filter/search-room__filter-price/search-room__filter-price.pug
                    p.search-room__filter-price-clarification Стоимость за сутки пребывания в номере
                .search-room__filter-checkbox
                    h3.search-room__filter-titles Checkbox Buttons
                    label
                        input(type="checkbox" name="smoke")
                        span Можно курить
                    label
                        input(type="checkbox" name="pets")
                        span Можно с питомцами
                    label
                        input(type="checkbox" name="guests")
                        span Можно пригласить гостей (до 10 человек)
                .search-room__filter-accessibility
                    h3.search-room__filter-titles доступность
                    label
                        input(type="checkbox" name="corridor")
                        span Широкий коридор
                    p Ширина коридоров в номере не менее 91 см.
                    label
                        input(type="checkbox" name="disabled-assistant")
                        span Помощник для инвалидов
                    p На 1 этаже вас встретит специалист и проводит до номера.
                .search-room__filter-convenience
                    h3.search-room__filter-titles удобства номера
